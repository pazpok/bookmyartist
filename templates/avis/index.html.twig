{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Avis index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>CreatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in avis %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.star }}</td>
                <td>{{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('avis_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('avis_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('avis_new') }}">Create new</a>
{% endblock %}